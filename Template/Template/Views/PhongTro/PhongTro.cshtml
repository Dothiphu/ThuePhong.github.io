@using Template.Models;

@using PagedList.Mvc;
@model PagedList.PagedList<Template.Models.Phong>
<link href="~/Content/CssChucnang/cssChucnang.css" rel="stylesheet" />
@{
    ViewBag.Title = "PhongTro";
    Layout = "~/Views/LayoutAdmin/Admin.cshtml";
}

<h2>PhongTro</h2>
@*<p>
    @Html.ActionLink("Thêm Mới", "ThemMoi")
</p>*@
@using (Html.BeginForm("TimKiem", "PhongTro", FormMethod.Post))
{
    <p>
        Tên Phòng:@Html.TextBox("SearchString")
        <input type="submit" value="Tìm kiếm" class="Timkiem" />
    </p>
}
<p>
    @Html.ActionLink("Thêm Mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaPhong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenPhong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaPhong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TrangThai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DienTich)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaPhong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenPhong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaPhong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienTich)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sua", new { @MaPhong = item.MaPhong}) |
            @Html.ActionLink("Hiển thị", "Hienthi", new { @MaPhong = item.MaPhong }) |
            @Html.ActionLink("Xóa", "Xoa", new { @MaPhong = item.MaPhong })
        </td>
    </tr>
}

</table>
@*Tao link lien ket cac trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("PhongTro", new { page = page }))

</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>

