@using Template.Models;

@using PagedList.Mvc;
@model PagedList.PagedList<Template.Models.DichVu>


@{
    ViewBag.Title = "DichVu";
    Layout = "~/Views/LayoutAdmin/Admin.cshtml";
}

<h2>DichVu</h2>
@using (Html.BeginForm("TimKiem", "DichVu", FormMethod.Post))
{
    <p>
        Tên DV:@Html.TextBox("SearchString")
        <input type="submit" value="Tìm kiếm" />
    </p>
}


<p>
    @Html.ActionLink("Thêm Mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaDV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenDV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaDV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaDV)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sua", new { @MaDV = item.MaDV }) |
            @Html.ActionLink("Hiển thị", "Hienthi", new { @MaDV = item.MaDV }) |
            @Html.ActionLink("Xóa", "Xoa", new { @MaDV = item.MaDV })
        </td>
    </tr>
}

</table>
@*Tao link lien ket cac trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("DichVu", new { page = page }))

</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>