@model Template.Models.Phong

@{
    ViewBag.Title = "Hienthi";
    Layout = "~/Views/LayoutAdmin/Admin.cshtml";
}
<h2>Hiển Thị</h2>
<div>
	<hr />
    <table border="1">
        <tr class="dl-horizontal" style="background-color: #EEEEEE; color: white; width:100px">
            <th>
                @Html.DisplayNameFor(model => model.MaPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DienTich)
            </th>
            
        </tr>
        <tr class="dl-horizontal">
            <td>
                @Html.DisplayFor(model => model.MaPhong)
            </td>
            <td>
                @Html.DisplayFor(model => model.TenPhong)
            </td>
            <td>
                @Html.DisplayFor(model => model.GiaPhong)
            </td>
            <td>
                @Html.DisplayFor(model => model.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(model => model.DienTich)
            </td>
            

        </tr>
    </table>
</div>
<br />
<p>
    <button type="button" class="btn btn-primary btn-lg">@Html.ActionLink("Sửa", "Sua", new { @MaPhong = Model.MaPhong })</button> |
    <button type="button" class="btn btn-success btn-lg">@Html.ActionLink("Trở về", "PhongTro")</button>
    
</p>
